{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 50vh;">
        <div class="col-md-6 col-lg-4">

            <!-- Bootstrap card for the form -->
            <div class="card">
                <div class="card-body">
                    <h1 class="h3 mb-3 font-weight-normal text-center">Créer un compte</h1>

                    {{ form_start(registrationForm, {'attr': {'class': 'form-signin'}}) }}
                    
                    {% if form_errors(registrationForm) %}
                        <div class="alert alert-danger">
                            {{ form_errors(registrationForm) }}
                        </div>
                    {% endif %}
                    
                    <!-- Email Field -->
                    <div class="form-group">
                        {{ form_row(registrationForm.email, {
                            'attr': {'class': 'form-control mb-3', 'placeholder': 'Adresse email'}
                        }) }}
                    </div>

                    <!-- Password Field -->
                    <div class="form-group">
                        {{ form_row(registrationForm.plainPassword, {
                            'label': 'Mot de passe',
                            'attr': {'class': 'form-control mb-3', 'placeholder': 'Mot de passe'}
                        }) }}
                    </div>

                    <!-- Age Field (assuming it exists in your form type) -->
                    <div class="form-group">
                        {{ form_row(registrationForm.age, {
                            'label': 'Votre age',
                            'attr': {'class': 'form-control mb-3', 'placeholder': 'Age'}
                        }) }}
                    </div>

                    <!-- Agree Terms Checkbox Corrected Layout -->
                    <div class="form-group form-check">
                        {{ form_widget(registrationForm.agreeTerms, {
                            'label': 'Accepter les conditions',
                            'attr': {'class': 'form-check-input'}
                        }) }}
                        {{ form_label(registrationForm.agreeTerms) }}
                    </div>

                    <button type="submit" class="btn btn-primary btn-block mt-4">S'inscrire</button>

                    {{ form_end(registrationForm) }}
                </div>
                
            </div>
            <a href="{{ path('app_login') }}" class="btn btn-primary btn-block mt-4">Vous avez déja un compte ? Connectez vous !</a>
        </div>
    </div>
</div>
{% endblock %}
